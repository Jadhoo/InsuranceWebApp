@model InsuranceWebApp.Models.UserAuth

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}

@Styles.Render("~/Style1/css")


<div class="wrapper fadeInDown">
    <div id="formContent">

        <div>
            <h2>Log In</h2>
        </div>


        


        <!-- Login Form -->
        <form method="post">
            <div class="input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text icon" id="basic-addon1"><i class="fas fa-user"></i></span>
                </div>
                <input type="text" id="username" name="UserName" class="form-control" placeholder="Username">
            </div>
            <div class="input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text icon" id="basic-addon1"><i class="fas fa-lock"></i></span>
                </div>
                <input type="password" id="password" name="Password" class="form-control" placeholder="Password">
            </div>
            <input type="submit" class="btn btn-outline-secondary" value="Log In">
        </form>

        <!-- Remind Passowrd -->
        <div id="formFooter">
            <a class="underlineHover" href="#">Forgot Password?</a>
        </div>

    </div>
</div>